<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zikrabyte.organic.activities.PreviewPictureActivity">

    <ImageView
        android:id="@+id/vI_app_imageview"
        android:layout_marginTop="26dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:src="@drawable/delivery"
        android:layout_above="@+id/vR_app_recyclerview"/>
    <ImageView
        android:id="@+id/vI_app_cancel"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/cancel"
        android:tint="@color/colorPrimary"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:layout_alignParentEnd="true"
        android:scaleType="fitXY"
        android:contentDescription="TODO" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/vR_app_recyclerview"
        android:layout_margin="16dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="120dp"/>

</RelativeLayout>

