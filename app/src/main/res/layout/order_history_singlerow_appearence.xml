    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:text="Sub Total"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:text="@string/rupee_symbol"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/vT_oh_sub_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Total Amount"
            android:textColor="@color/blue"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:layout_marginStart="8dp"
            android:text="@string/rupee_symbol"
            android:textColor="@color/blue"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/vT_oh_total_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/blue"
            android:textSize="18sp" />

    </LinearLayout>
    <ProgressBar
        android:visibility="gone"
        android:id="@+id/vP_oh_progressBar"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_gravity="center"
        android:indeterminateTint="@color/blue"
        android:progressTint="@color/colorPrimary"/>

    <RelativeLayout
        android:id="@+id/vR_delivery_status_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        >
        <TextView
            android:layout_alignParentStart="true"
            android:id="@+id/vT_oh_delivery_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:text="delivery status"
            android:textColor="@color/blue"
            android:textSize="16sp" />

        <Button
           android:layout_alignParentEnd="true"
            android:id="@+id/vT_oh_cancel_order"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:visibility="gone"
            android:gravity="center"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@drawable/roundeded_button"
            android:textAllCaps="false"
            android:text="Cancel order"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </RelativeLayout>

        <TextView
            android:visibility="gone"
            android:id="@+id/vT_oh_order_cancelled"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="Order Cancelled"
            android:textSize="16sp"
            android:textColor="#F44336"/>



</LinearLayout>

