        <LinearLayout
            android:id="@+id/vL_nh_home_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="26dp"
            android:orientation="horizontal"
            android:layout_marginStart="36dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/home"
                android:tint="@color/colorwhite"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/vL_nh_myprofile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:layout_marginStart="36dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/myprofile"
                android:tint="@color/colorwhite"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/vT_nh_my_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Profile"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/vL_nh_myaddress_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:layout_marginStart="36dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/my_address"
                android:tint="@color/colorwhite"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/vT_nh_my_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Address"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/vL_nh_mycart_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/my_cart"
                android:tint="@color/colorwhite" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Cart"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/vL_nh_myorders_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:layout_marginStart="36dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/my_orders"
                android:tint="@color/colorwhite"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/vT_nh_my_orders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Orders"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/vL_nh_mycoupons_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:layout_marginStart="36dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/mycoupon"
                android:tint="@color/colorwhite"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/vT_nh_my_coupons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My coupon"
                android:textSize="15sp" />

        </LinearLayout>

