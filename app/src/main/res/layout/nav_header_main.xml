        <LinearLayout
            android:id="@+id/vL_nh_aboutus_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:layout_marginStart="36dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/aboutus"
                android:tint="@color/colorwhite" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About Us"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/vL_nh_contactus_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/contactus"
                android:tint="@color/colorwhite" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Us"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/vL_nh_share_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:layout_marginStart="36dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/share"
                android:tint="@color/colorwhite"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/vT_nh_referral_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Referral code"
                android:textSize="15sp" />

        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/vI_nh_back"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="56dp"
        android:src="@drawable/back"
        android:tint="@color/colorwhite"
        android:layout_marginStart="16dp" />

    <LinearLayout
        android:id="@+id/vL_nh_rateus_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_margin="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/rateus"
            android:tint="@color/colorwhite" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Rate Us"
            android:textColor="@color/colorwhite"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/vL_nh_logout_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:layout_marginBottom="16dp"

        android:orientation="vertical">

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logout"
            android:tint="@color/colorwhite"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/vT_nh_log_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Logout"
            android:textColor="@color/colorwhite"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/vL_nh_login_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/login"
            android:tint="@color/colorwhite"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/vT_nh_log_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Login"
            android:textColor="@color/colorwhite"
            android:textSize="16sp" />

    </LinearLayout>


</FrameLayout>
