<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/signin_bg"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zikrabyte.organic.activities.SignInActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context="com.zikrabyte.organic.activities.SignUpActivity">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:text="SIGN IN"
                android:textSize="26sp"
                android:layout_marginTop="36dp"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center_horizontal"/>
            <View
                android:layout_width="80dp"
                android:layout_height="2dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorPrimary"
                />
            <TextView
                android:id="@+id/vT_asi_signintext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="60dp"
                android:paddingLeft="60dp"
                android:gravity="center"
                android:text="Just One Step Left LoremIpsum"
                android:layout_marginTop="36dp"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal"/>

            <EditText
                android:id="@+id/vE_asi_username"
                android:layout_width="@dimen/edittext_width"
                android:layout_height="@dimen/edittext_height"
                android:textColorHint="@color/colorPrimary"
                android:layout_marginTop="140dp"
                android:hint="User name"
                android:textSize="20sp"
                android:paddingLeft="26dp"
                android:paddingRight="0dp"
                android:background="@drawable/rounded_edittext"
                android:layout_gravity="center_horizontal"/>
            <EditText
                android:id="@+id/vE_asi_password"
                android:layout_width="@dimen/edittext_width"
                android:layout_height="@dimen/edittext_height"
                android:textColorHint="@color/colorPrimary"
                android:hint="Password"
                android:textSize="20sp"
                android:paddingLeft="16dp"
                android:paddingRight="0dp"
                android:layout_marginTop="26dp"
                android:background="@drawable/rounded_edittext"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/vT_asi_forgotpassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Forgot password?"
                android:layout_gravity="right"
                android:gravity="center"
                android:layout_marginRight="42dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/blue"/>
            <!-- Login progress -->
            <ProgressBar
                android:id="@+id/login_progress"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/vB_asi_signin"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:background="@drawable/roundeded_button"
                android:text="Sign in"
                android:layout_marginTop="36dp"
                android:textAllCaps="false"
                android:textColor="@color/colorwhite"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/vT_asi_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Create an account? SignUp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:textColor="@color/blue"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>